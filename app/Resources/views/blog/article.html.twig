{# app/Resources/views/blog/article.html.twig #}
{% extends "blog/blogtemplate.html" %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
    <div id="Article">
        <h2>{{ article.title }}</h2>
        <p>{{ article.text|nl2br }}</p>{# |nl2br converts \n to html symbol #}
        <p>Autor: {{ article.user.username }}</p>
    </div>

    <p>
        {% if likes %}
            <a href="/blog/likeArticle/{{ article.id }}/{{ "delete" }}" class="btn btn-warning">dislike</a> {{ likeCounts }}
        {% else %}
            <a href="/blog/likeArticle/{{ article.id }}/{{ "setlike" }}" class="btn btn-success">Like</a> {{ likeCounts }}
        {% endif %}
    </p>
    
    <a href="/blog/list" class="btn btn-outline-secondary">back to list</a>
{% endblock %}